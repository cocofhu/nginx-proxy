{
  "server_name": "secure.example.com",
  "listen_ports": [443],
  "ssl_cert": "/etc/nginx/certs/example.crt",
  "ssl_key": "/etc/nginx/certs/example.key",
  "locations": [
    {
      "path": "/",
      "upstreams": [
        {
          "condition_ip": "0.0.0.0/0",
          "target": "http://backend-server:8080"
        }
      ]
    }
  ]
}